<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AdminLTE Theme</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/app")
    @Html.Partial("_ThemePartial")
</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        @Html.Partial("_LayoutHeaderPartial")
        @Html.Partial("_LayoutLeftSidePartial")
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @Html.Partial("_LayoutBreadcrumbPartial")
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        @Html.Partial("_LayoutFooterPartial")
    </div>
    <!-- ./wrapper -->

    <script type="text/javascript">
        //$.widget.bridge('uibutton', $.ui.button);
        $(function () {
            App.init();
        });
    </script>

    @RenderSection("scripts", required: false)
</body>

</html>
